@model quotes_project.Models.CotizadorModel

@{
    ViewData["Title"] = "Cotizador";
    Model.LoadData();
}

<div class="container mt-5">
    <h2 class="text-center">Crear Cotización</h2>
    <form id="cotizacionForm" asp-action="Guardar" method="post" class="row g-3">
        <div class="col-md-12">
            <div class="mb-3">
                <label for="CustomerId" class="form-label">Cliente</label>
                <select id="CustomerId" name="CustomerId" class="form-select" required>
                    <option value="">Seleccione un cliente</option>
                    @foreach (var customer in Model.CustomerEntity)
                    {
                        <option value="@customer.IdCustomer">@customer.CustomerName</option>
                    }
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="ProductId" class="form-label">Tipo de Producto</label>
                <select id="ProductId" name="ProductId" class="form-select" required>
                    <option value="">Seleccione un producto</option>
                    @foreach (var product in Model.LocalProductEntity)
                    {
                        <option value="@product.IdProduct">@product.ProductName</option>
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="Amount" class="form-label">Monto</label>
                <input type="number" step="0.01" id="Amount" name="Amount" class="form-control" required />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="Description" class="form-label">Descripción</label>
                <textarea id="Description" name="Description" class="form-control" rows="4" required></textarea>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="DDate" class="form-label">Fecha</label>
                <input type="date" id="DDate" name="DDate" class="form-control" required />
                <span asp-validation-for="DDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="UserId" class="form-label">Usuario</label>
                <select id="UserId" name="UserId" class="form-select" required>
                    <option value="">Seleccione un usuario</option>
                    @foreach (var user in Model.UserEntity)
                    {
                        <option value="@user.IdUser">@user.Username</option>
                    }
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            function actualizarMonto() {
                var customerId = $('#CustomerId').val();
                var productId = $('#ProductId').val();

                if (customerId !== '' && productId !== '') {
                    $.ajax({
                        url: '/Cotizador/ObtenerMontoCliente',
                        type: 'POST',
                        data: { customerId: customerId, productId: productId },
                        success: function (response) {
                            if (response.success) {
                                // Formatear el monto a dos decimales
                                var montoFormateado = parseFloat(response.monto).toFixed(2);
                                $('#Amount').val(montoFormateado);
                            } else {
                                console.error(response.message);
                                // Puedes manejar el error como mejor se ajuste a tu aplicación
                            }
                        },
                        error: function () {
                            console.error('Error al obtener el monto del cliente.');
                        }
                    });
                } else {
                    $('#Amount').val('');
                }
            }

            // Llamar la función al cargar la página
            actualizarMonto();

            // Manejar el evento de cambio para el cliente
            $('#CustomerId').change(actualizarMonto);

            // Manejar el evento de cambio para el producto
            $('#ProductId').change(actualizarMonto);

            // Permitir la modificación manual del monto con dos decimales
            $('#Amount').change(function () {
                var monto = parseFloat($(this).val());
                if (!isNaN(monto)) {
                    $(this).val(monto.toFixed(2));
                }
            });
        });
    </script>
}
