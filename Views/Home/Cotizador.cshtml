@model quotes_project.Models.CotizadorModel

@{
    ViewData["Title"] = "Cotizador";
    Model.LoadData(); // Asegúrate de que los datos estén cargados correctamente
}

<div class="container mt-5">
    <h2 class="text-center">Crear Cotización</h2>
    <form id="cotizacionForm" asp-action="Guardar" method="post" class="row g-3 formulario-cotizacion border border-primary rounded p-4">
        <div class="col-md-4">
            <div class="mb-3">
                <label for="CustomerId" class="form-label">Cliente</label>
                <select id="CustomerId" name="CustomerId" class="form-select" required>
                    <option value="">Seleccione un cliente</option>
                    @foreach (var customer in Model.CustomerEntity)
                    {
                        <option value="@customer.IdCustomer">@customer.CustomerName</option>
                    }
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label for="CustomerType" class="form-label">Tipo de Cliente</label>
                <input type="text" id="CustomerType" name="CustomerType" class="form-control" readonly />
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label for="LicenceType" class="form-label">Tipo de Licencia</label>
                <input type="text" id="LicenceType" name="LicenceType" class="form-control" readonly />
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="ProductId" class="form-label">Tipo de Producto</label>
                <select id="ProductId" name="ProductId" class="form-select" required>
                    <option value="">Seleccione un producto</option>
                    @foreach (var product in Model.LocalProductEntity)
                    {
                        <option value="@product.IdProduct">@product.ProductName</option>
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="Amount" class="form-label">Monto</label>
                <input type="number" step="0.01" id="Amount" name="Amount" class="form-control" required />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="ProductDescription" class="form-label">Descripción del Producto</label>
                <textarea id="ProductDescription" class="form-control" rows="8" required></textarea>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="ImportantNotes" class="form-label">Notas Importantes</label>
                <textarea id="ImportantNotes" class="form-control" rows="1" required></textarea>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="DDate" class="form-label">Fecha</label>
                <input type="date" id="DDate" name="DDate" class="form-control" required />
                <span asp-validation-for="DDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="UserId" class="form-label">Usuario</label>
                <select id="UserId" name="UserId" class="form-select" required>
                    <option value="">Seleccione un usuario</option>
                    @foreach (var user in Model.UserEntity)
                    {
                        <option value="@user.IdUser">@user.Username</option>
                    }
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            function actualizarClienteYMontos() {
                var customerId = $('#CustomerId').val();
                var productId = $('#ProductId').val();

                if (customerId !== '') {
                    $.ajax({
                        url: '@Url.Action("ObtenerClienteDetalles", "Cotizador")',
                        type: 'POST',
                        data: { customerId: customerId },
                        success: function (response) {
                            if (response.success) {
                                $('#CustomerType').val(response.customerType);
                                $('#LicenceType').val(response.licenceType);
                            } else {
                                console.error(response.message);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.error('Error al obtener los detalles del cliente: ' + textStatus + " " + errorThrown);
                        }
                    });
                } else {
                    $('#CustomerType').val('');
                    $('#LicenceType').val('');
                }

                if (productId !== '') {
                    $.ajax({
                        url: '@Url.Action("ObtenerProductoDescripcion", "Cotizador")',
                        type: 'POST',
                        data: { productId: productId },
                        success: function (response) {
                            if (response.success) {
                                $('#ProductDescription').val(response.productDescription);
                            } else {
                                console.error(response.message);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.error('Error al obtener la descripción del producto: ' + textStatus + " " + errorThrown);
                        }
                    });
                } else {
                    $('#ProductDescription').val('');
                }

                if (customerId !== '' && productId !== '') {
                    $.ajax({
                        url: '@Url.Action("ObtenerMontoCliente", "Cotizador")',
                        type: 'POST',
                        data: { customerId: customerId, productId: productId },
                        success: function (response) {
                            if (response.success) {
                                var montoFormateado = parseFloat(response.monto).toFixed(2);
                                $('#Amount').val(montoFormateado);
                            } else {
                                console.error(response.message);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.error('Error al obtener el monto del cliente: ' + textStatus + " " + errorThrown);
                        }
                    });
                } else {
                    $('#Amount').val('');
                }
            }

            $('#CustomerId, #ProductId').change(actualizarClienteYMontos);

            $('#Amount').change(function () {
                var monto = parseFloat($(this).val());
                if (!isNaN(monto)) {
                    $(this).val(monto.toFixed(2));
                }
            });
        });
    </script>
}
