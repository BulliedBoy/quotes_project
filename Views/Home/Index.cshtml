@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">PayDay Quotes</h1>
    <p>"COTIZADOR COTIZANTE"</p>
</div>

<form style="max-width:500px;margin:0 auto">
    <div class="form-group" style="margin-bottom:15px"> 
        <input type="text" class="form-control" id="exampleInputUser" placeholder="Usuario">
    </div>
    <div class="form-group" style="margin-bottom:10px">
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Contraseña">
    </div>
    <div class="form-group form-remember">
        <input type="checkbox" class="form-check-input" id="remember-user-credentials" style="margin-bottom:25px">
        <label class="form-check-label" for="remember-user-credentials">No cerrar sesión</label>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>





